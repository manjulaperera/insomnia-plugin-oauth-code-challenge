{
  "name": "insomnia-plugin-oauth-code-challenge",
  "version": "1.0.0",
  "description": "This is an Insomnia plugin to generate an OAuth 2 PKCE (Proof Key for Code Exchange) code challenge and code verifier",
  "type": "module",
  "main": "dist/main.js",
  "types": "dist/main.d.ts",
  "scripts": {
    "prepublish": "tsc",
    "start": "nodemon ./src/main.ts",
    "build": "tsc --project ./tsconfig.json",
    "test": "tsc & jest -c ./jest.unit.json",
    "test:coverage": "jest --coverage -c ./jest.unit.json"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/manjulaperera/insomnia-plugin-oauth-code-challenge.git"
  },
  "keywords": [
    "PKCE",
    "OAuth2",
    "Code Challenge",
    "Code Verifier",
    "Insomnia"
  ],
  "author": "Manjula Perera",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/manjulaperera/insomnia-plugin-oauth-code-challenge/issues"
  },
  "homepage": "https://github.com/manjulaperera/insomnia-plugin-oauth-code-challenge#readme",
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "jest": "^27.5.1",
    "nodemon": "^2.0.15",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.6.0",
    "tslib": "^2.3.1",
    "typescript": "^4.6.2"
  },
  "insomnia": {
    "name": "Oath 2 code challenge and code verifier generator",
    "description": "This helps to generate an OAuth 2 PKCE code challenge and code verifier",
    "images": {
      "icon": "icon.svg",
      "cover": "cover.svg"
    }
  },
  "dependencies": {
    "base64-arraybuffer": "^1.0.2"
  }
}
